<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.track_my_task.Add_Task"
    android:weightSum="3"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/dp_twenty"
        android:background="@color/blue_cement"
        >
        <Button
            android:layout_margin="@dimen/dp_ten"
            android:background="@color/button_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pick_place"
            android:textAlignment="center"
            android:id="@+id/place_pick"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue_cement"
        android:layout_margin="@dimen/dp_twenty"
        >
        <EditText
            android:layout_margin="@dimen/dp_ten"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/hint_task"
            android:id="@+id/task_name"
           />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/dp_twenty"
        android:background="@color/blue_cement"

        >
        <Button
            android:layout_margin="@dimen/dp_twenty"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/set_date"
            android:background="@color/button_blue"
            android:textAlignment="center"
            android:id="@+id/set_date"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:gravity="center"
            android:layout_width="@dimen/dp_hundred"
            android:layout_height="@dimen/dp_forty"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/save"
            android:textAlignment="center"
            android:id="@+id/save_task"
            android:background="@color/blue_cement"
            />


    </LinearLayout>



</LinearLayout>