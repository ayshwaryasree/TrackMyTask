<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_Pending_list"
        android:layout_below="@+id/home_pending"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"

        />

    <TextView
        android:text="@string/TodayS_Tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_Pending_list"
        android:layout_centerHorizontal="true"
        android:background="@color/blue_cement"
        android:textSize="@dimen/sp_thirty"
        android:gravity="center"
        android:id="@+id/home_today"
        android:visibility="gone"



        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_today"
        android:layout_toRightOf="@+id/home_Pending_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/home_today_list"

        android:visibility="gone"


        />

    <TextView
        android:text="@string/Upcoming_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_today_list"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_upcoming"
        android:background="@color/blue_cement"
        android:textSize="@dimen/sp_thirty"
        android:gravity="center"
        android:visibility="gone"


        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_upcoming"
        android:layout_toRightOf="@+id/home_Pending_list"
        android:layout_toEndOf="@+id/home_Pending_list"
        android:id="@+id/home_upcoming_list"
        android:visibility="gone"




        />

    <TextView
        android:text="@string/PendingS_Tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_pending"
        android:background="@color/blue_cement"
        android:textSize="@dimen/sp_thirty"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:visibility="gone"

        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_eighty"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"

        />

</RelativeLayout>

