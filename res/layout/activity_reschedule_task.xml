<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reschedule_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.microsoft.track_my_task.Reschedule_task"
    android:weightSum="3"
    android:orientation="vertical">

   <LinearLayout
        android:layout_marginTop="@dimen/dp_eighty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:background="@color/blue_cement"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/place_name"
            android:textAlignment="center"
            android:id="@+id/Task_place"
            android:layout_weight="1"
            android:visibility="visible"

            />
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/sp_twenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/Rplace_name"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:background="@color/blue_cement"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/task_name"
            android:textAlignment="center"
            android:id="@+id/text"
            android:layout_weight="1"
            />
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/sp_twenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/Rtask_name"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:background="@color/blue_cement"
        >
        <TextView
            android:layout_width="@dimen/dp_zero"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/due_date"
            android:textAlignment="center"
            android:id="@+id/text2"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="@dimen/dp_hundred"
            android:layout_height="@dimen/dp_forty"
            android:text="@string/set_date"
            android:background="@color/button_blue"
            android:id="@+id/Rset_date"/>
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:gravity="center"
            android:textSize="@dimen/sp_twenty_eight"
            android:layout_width="@dimen/dp_ninety"
            android:layout_height="@dimen/dp_forty"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/save"
            android:textAlignment="center"
            android:id="@+id/update_task"
            android:background="@color/blue_cement"
            />


    </LinearLayout>


</LinearLayout>
